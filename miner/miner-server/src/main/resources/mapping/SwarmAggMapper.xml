<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mei.hui.miner.mapper.SwarmAggMapper">


    <select id="getPerTicketInfo" parameterType="Map" resultMap="Map">
        SELECT
            SUM(agg.per_ticket) totalPerTicket,agg.wallet_address walletAddress FROM swarm_agg agg
        <where>
            <if test="startDate != null">
                <![CDATA[agg.date >= #{startDate} ]]>
            </if>
            <if test="endDate != null">
                <![CDATA[and agg.date <= #{endDate}]]>
            </if>
            <if test="addresses != null">
            and agg.wallet_address in
               <foreach collection="addresses" item="item" open="(" close=")" separator=",">
               #{item}
               </foreach>
            </if>
        </where>
        GROUP BY agg.wallet_address
    </select>

</mapper>