<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mei.hui.user.mapper.SysVerifyCodeMapper">
    
    <resultMap type="SysVerifyCode" id="SysVerifyCodeResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="phone"    column="phone"    />
        <result property="verifyCode"    column="verify_code"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectSysVerifyCodeVo">
        select id, user_id, phone, verify_code, status, create_time, update_time from sys_verify_code
    </sql>

    <select id="selectSysVerifyCodeList" parameterType="SysVerifyCode" resultMap="SysVerifyCodeResult">
        <include refid="selectSysVerifyCodeVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="verifyCode != null  and verifyCode != ''"> and verify_code = #{verifyCode}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectSysVerifyCodeById" parameterType="Long" resultMap="SysVerifyCodeResult">
        <include refid="selectSysVerifyCodeVo"/>
        where id = #{id}
    </select>

    <select id="selectSysVerifyCodeByUserId" parameterType="Long" resultMap="SysVerifyCodeResult">
        <include refid="selectSysVerifyCodeVo"/>
        where user_id = #{userId} and status = 0 order by id desc limit 1
    </select>


    <select id="selectSysVerifyCodeByUserIdAndVerifyCode" parameterType="SysVerifyCode" resultMap="SysVerifyCodeResult">
        <include refid="selectSysVerifyCodeVo"/>
        where user_id = #{userId} and `verify_code` = #{verifyCode} and `status` = 0 order by `id` desc limit 1
    </select>

    <insert id="insertSysVerifyCode" parameterType="SysVerifyCode" useGeneratedKeys="true" keyProperty="id">
        insert into sys_verify_code
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="phone != null and phone != ''">phone,</if>
            <if test="verifyCode != null and verifyCode != ''">verify_code,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="phone != null and phone != ''">#{phone},</if>
            <if test="verifyCode != null and verifyCode != ''">#{verifyCode},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateSysVerifyCode" parameterType="SysVerifyCode">
        update sys_verify_code
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="phone != null and phone != ''">phone = #{phone},</if>
            <if test="verifyCode != null and verifyCode != ''">verify_code = #{verifyCode},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteSysVerifyCodeById" parameterType="Long">
        delete from sys_verify_code where id = #{id}
    </delete>

    <delete id="deleteSysVerifyCodeByIds" parameterType="String">
        delete from sys_verify_code where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>